<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_refer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/tool_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tool_bar"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/id_referimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dimen_16dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_refer_earn_image" />

            <TextView
                android:id="@+id/id_txtreferfriends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Refer Your Friend"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/id_txtfreecheckup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="For free checkup"
                android:textSize="16dp" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="-20dp"
                android:layout_marginLeft="@dimen/dimen_70dp"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:text="Share Your Referal code " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:layout_marginRight="@dimen/dimen_20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/refer_earn_doted_rectangle"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10dp"
                    android:gravity="center"
                    android:text="JB012PIND"
                    android:textSize="@dimen/dimen_16dp" />
            </LinearLayout>

            <Button
                android:id="@+id/id_btninvite"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="-25dp"
                android:background="#008800"
                android:text="Invite Friend"
                android:textColor="#fff"
                android:textSize="12dp" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>
