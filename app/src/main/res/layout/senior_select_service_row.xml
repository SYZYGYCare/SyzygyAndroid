<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dimen_8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        app:elevation="15dp"
        android:padding="@dimen/dimen_8dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:id="@+id/RelativeImageId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/seniorImage"
                android:layout_width="@dimen/dimen_80dp"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/user_profile_pic" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignRight="@+id/seniorImage"

                android:orientation="vertical">


                <TextView
                    android:id="@+id/SeniorNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@+id/empImage"
                    android:text="Name"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/ageNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/empImage"
                    android:text="Age"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/GenderNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_toRightOf="@+id/empImage"
                    android:text="Gender"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/DescriptionNameTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"

                    android:layout_toRightOf="@+id/empImage"
                    android:text="Description"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvRelationShipId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"

                    android:layout_toRightOf="@+id/empImage"
                    android:text="Relationship"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>



