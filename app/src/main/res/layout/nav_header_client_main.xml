<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clientHeaderView"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/white"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/clientUserImage"
        android:layout_width="@dimen/dimen_90dp"
        android:layout_height="@dimen/dimen_90dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:src="@drawable/user_profile_pic"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="0.1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:layout_toRightOf="@+id/clientUserImage"
        android:orientation="vertical">

        <TextView
            android:id="@+id/clientUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UserName"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/clientMobileNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mobile No"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_small" />

        <View
            android:layout_width="@dimen/dimen_60dp"
            android:layout_height="@dimen/dimen_1dp"
            android:background="@color/colorPrimary" />
    </LinearLayout>

</RelativeLayout>